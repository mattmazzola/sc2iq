<div class="sc2iq-test">

  <div>
    <div class="sc2iq-test__time text-center">
      <span class="glyphicon glyphicon-dashboard"></span> Time: {{moment timeDifference "mm:ss.SS"}}
    </div>

    <div class="sc2iq-test__start-question {{if isStarted 'hidden'}}">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span>Fake Question</span>
        </div>
        <div class="panel-body">
          <button type="button" class="btn btn-default btn-lg btn-block">
              <span class=" index">1</span>
              <span class="text">Answer 1</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block">
              <span class="index">2</span>
              <span class="text">Answer 2</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block">
              <span class="index">3</span>
              <span class="text">Answer 3</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block">
              <span class="index">4</span>
              <span class="text">Answer 4</span>
          </button>
        </div>
      </div>
      <button class="sc2iq-test__start-button btn btn-success btn-lg  {{if isStarted 'hidden'}}" {{action "startClicked"}}>
        <span class="glyphicon glyphicon-play-circle"></span> Begin!
      </button>
    </div>

    <div class="sc2iq-test__questions {{unless isStarted 'hidden'}} {{if isFinished 'hidden'}}">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <span class="big-q">Q</span><span class="text">{{currentQuestion.text}}</span>
        </div>
        <div class="panel-body">
          <button type="button" class="btn btn-default btn-lg btn-block" {{action "submitAnswerClicked" 0 currentQuestion}}>
              <span class=" index">1</span>
              <span class="text">{{currentQuestion.answer1}}</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block" {{action "submitAnswerClicked" 1 currentQuestion}}>
              <span class="index">2</span>
              <span class="text">{{currentQuestion.answer2}}</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block" {{action "submitAnswerClicked" 2 currentQuestion}}>
              <span class="index">3</span>
              <span class="text">{{currentQuestion.answer3}}</span>
          </button>

          <button type="button" class="btn btn-default btn-lg btn-block" {{action "submitAnswerClicked" 3 currentQuestion}}>
              <span class="index">4</span>
              <span class="text">{{currentQuestion.answer4}}</span>
          </button>
        </div>
      </div>
    </div>

    <div class="sc2iq-test__finished {{unless isFinished 'hidden'}}">
      <div class="panel panel-default">
        <div class="panel-heading text-center clearfix">
          <span class="title text-center">Finished!</span>
        </div>
        <div class="panel-body">
          <p>
            Percent: ({{result.totalCorrect}}/{{result.answers.length}}) {{result.percentageCorrect}}%
          </p>
          <p>
            Score: 345
          </p>
          <div class="container-fluid">
            <div class="sc2iq-question-results__header">
              <div class="row">
                <div class="col-md-2">#</div>
                <div class="col-md-2">
                  <span class="glyphicon glyphicon-ok"></span>
                </div>
                <div class="col-md-2">
                  <span class="glyphicon glyphicon-signal"></span> Difficulty
                </div>
                <div class="col-md-3">
                  <span class="glyphicon glyphicon-time"></span> Duration
                </div>
                <div class="col-md-3">
                  <span class="glyphicon glyphicon-plus"></span> Points
                </div>
              </div>
            </div>

            {{#each answers as |answer index|}}
              {{sc-question-result result=answer index=index}}
            {{/each}}

            <div class="sc2iq-question-results__footer">
              <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                  {{#link-to "scores" tagName="button" class="btn btn-primary"}}Scores{{/link-to}}
                </div>
                <div class="col-md-3">
                  <b>187</b>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="sc2iq-test__actions text-center">
      <button type="button" class="btn {{if isFinished 'btn-success' 'btn-warning'}} btn-lg" {{action "restart" }} disabled="{{unless isStarted 'disabled'}}">
          <span class="glyphicon glyphicon-repeat"></span> Restart
      </button>
    </div>

    <div class="sc2iq-test__tips text-center {{if isStarted 'hidden'}}">
      <h4><span class="glyphicon glyphicon-star"></span> Keyboard shortcuts.</h4>
      <p><strong>b</strong> - Begin Test</p>
      <p><strong>1</strong> - Select Answer 1</p>
      <p><strong>2</strong> - Select Answer 2</p>
      <p><strong>3</strong> - Select Answer 3</p>
      <p><strong>4</strong> - Select Answer 4</p>
    </div>
  </div>

</div>
