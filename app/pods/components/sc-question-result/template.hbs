<div class="sc2iq-question-result">
  <div class="sc2iq-question-result__trigger" {{action "toggleDetails" }}>
    <div class="row">
      <div class="col-md-2">{{computedIndex}}</div>
      <div class="col-md-2">
        <span class="glyphicon {{ if result.isCorrect 'glyphicon glyphicon-ok text-success' 'glyphicon glyphicon-remove text-danger'}}"></span>
      </div>
      <div class="col-md-2">
        {{result.question.difficulty}}
      </div>
      <div class="col-md-2">
        {{moment result.duration "mm:ss:SS"}}
      </div>
      <div class="col-md-2">
        {{moment result.time "mm:ss:SS"}}
      </div>
      <div class="col-md-2">
        {{result.points}}
      </div>
    </div>
  </div>
  <div class="sc2iq-question-result__details {{if isExpanded 'sc2iq-question-result__details--open'}}">
    <div class="sc2iq-question-result__details-inner">
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-3">
              <b>Question:</b>
            </div>
            <div class="col-md-9">
              {{result.question.text}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <b>Your Answer:</b>
            </div>
            <div class="col-md-9 {{ if result.isCorrect 'text-success' 'text-danger'}}">
              {{result.answerIndex}}
              {{result.answer}}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              <b>Correct Answer:</b>
            </div>
            <div class="col-md-9">
              {{result.question.a}}
              {{result.question.correctAnswer}}
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="sc2iq-question-result__details-graph">
            Graph
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
