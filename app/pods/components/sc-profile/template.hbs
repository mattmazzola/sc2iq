<section class="container">
  <h1>Profile: {{user.displayName}}</h1>
  <img src={{user.imageUrl}} alt="Profile Image" />

  <form class="form-horizontal" {{action "submit" on="submit"}}>
    <div class="form-group">
      <label for="uid" class="col-sm-2 control-label">UID</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" id="uid" value=user.uid disabled="disabled" }}
      </div>
    </div>
    <div class="form-group">
      <label for="role" class="col-sm-2 control-label">Role</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" id="role" value=user.role }}
      </div>
    </div>
    <div class="form-group">
      <label for="imageUrl" class="col-sm-2 control-label">ImageUrl:</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" id="imageUrl" value=user.imageUrl }}
      </div>
    </div>
    <div class="form-group">
      <label for="points" class="col-sm-2 control-label">Points:</label>
      <div class="col-sm-4">
        {{input type="number" class="form-control" id="points" min="0" step="1" max="1000" value=user.points }}
      </div>
      <div class="col-sm-4">
        1000
      </div>
    </div>
    <div class="form-group">
      <label for="votes" class="col-sm-2 control-label">Votes:</label>
      <div class="col-sm-4">
        {{input type="number" class="form-control" id="votes" min="0" step="1" max="1000" value=user.votes }}
      </div>
      <div class="col-sm-4">
        1000
      </div>
    </div>
    <div class="form-group">
      <label for="points" class="col-sm-2 control-label">Rating:</label>
      <div class="col-sm-1">
        <span>-5</span> <span>{{user.rating}}</span>
      </div>
      <div class="col-sm-8">
        {{input type="range" class="form-control" id="points" min="-5" step="1" max="5" value=user.rating }}
      </div>
      <div class="col-sm-1">
        <span>-5</span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=user.special }} Special
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save</button>
      </div>
    </div>
  </form>
</section>
